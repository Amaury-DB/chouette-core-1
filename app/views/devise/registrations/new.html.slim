- content_for :page_header_title, t('.title')

- content_for :page_header_actions do
  = link_to 'devise.registrations.new.sign_in'.t, new_user_session_path, class: 'btn btn-default'

.page_content#devise
  .container-fluid
    #sessions_new.row
      = render 'devise/shared/intro'

      .col-md-4.signup
        .panel.panel-default
          .panel-heading
            .panel-title= t('.sign_up')
          .panel-body
            = render partial: 'devise/shared/form_registration', locals: { organisation: (resource.organisation || Organisation.new) }
