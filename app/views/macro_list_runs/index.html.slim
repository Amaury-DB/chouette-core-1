- breadcrumb :macro_list_runs, @workbench

.page_content
  .container-fluid
    - if params[:q].present? or @macro_list_runs.any?
      .row
        .col-lg-12
          = render 'filters'

    - if @macro_list_runs.any?
      .row
        .col-lg-12
          = table_builder_2 @macro_list_runs,
            [ \
							TableBuilderHelper::Column.new( \
                key: :status, \
                attribute: Proc.new { |macro_list_run| operation_status(macro_list_run&.user_status, verbose: true) }, \
              ), \
              TableBuilderHelper::Column.new( \
                key: :name, \
                attribute: :name, \
                link_to: lambda do |macro_list_run| \
                workbench_macro_list_run_path( \
                    @workbench, \
                    macro_list_run \
                  ) \
                end \
              ), \
              TableBuilderHelper::Column.new( \
                key: :referential_id, \
                attribute: Proc.new { |m| m.referential.name }, \
								if: Proc.new { |m| m.referential }, \
                sortable: false \
              ), \
              TableBuilderHelper::Column.new( \
                key: :started_at, \
                attribute: Proc.new { |n| l(n.started_at, format: :short_with_time) if n.started_at }, \
              ), \
              TableBuilderHelper::Column.new( \
                key: :duration, \
                attribute: Proc.new { |object| object.ended_at.presence && object.started_at.presence && duration_in_words(object.ended_at - object.started_at)}, \
                sortable: false,\
              ), \
              TableBuilderHelper::Column.new( \
                key: :created_by, \
                attribute: :creator, \
                sortable: false,\
              ) \
              \
            ].compact,
            cls: 'table has-filter has-search'

          = new_pagination @macro_list_runs, 'pull-right'

    - unless @macro_list_runs.any?
      .row.mt-xs
        .col-lg-12
          = replacement_msg t('macro_list_run.search_no_results')
