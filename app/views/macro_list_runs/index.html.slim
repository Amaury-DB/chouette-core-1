- breadcrumb :macro_list_runs, @workbench

.page_content
  .container-fluid
    - if params[:q].present? or @macro_list_runs.any?
      .row
        .col-lg-12

    - if @macro_list_runs.any?
      .row
        .col-lg-12
          = table_builder_2 @macro_list_runs,
            [ \
							TableBuilderHelper::Column.new( \
                key: :status, \
                attribute: :status, \
              ), \
              TableBuilderHelper::Column.new( \
                key: :name, \
                attribute: Proc.new { |m| m.original_macro_list.name }, \
                sortable: false, \
                link_to: lambda do |macro_list_run| \
                workbench_macro_list_run_path( \
                    @workbench, \
                    macro_list_run \
                  ) \
                end \
              ), \
              TableBuilderHelper::Column.new( \
                key: :referential_id, \
                attribute: Proc.new { |m| m.referential.name }, \
								if: Proc.new { |m| m.referential }, \
                sortable: false \
              ), \
              TableBuilderHelper::Column.new( \
                key: :created_at, \
                attribute: :created_at, \
                sortable: false,\
              ), \
              TableBuilderHelper::Column.new( \
                key: :duration, \
                attribute: Proc.new { |m| m.duration }, \
                sortable: false,\
              ), \
              TableBuilderHelper::Column.new( \
                key: :created_by, \
                attribute: :creator, \
                sortable: false,\
              ) \
              \
            ].compact,
            cls: 'table has-filter has-search'

          = new_pagination @macro_list_runs, 'pull-right'

    - unless @macro_list_runs.any?
      .row.mt-xs
        .col-lg-12
          = replacement_msg t('macro.search_no_results')
