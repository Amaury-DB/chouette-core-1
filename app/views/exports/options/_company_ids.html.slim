div[
	x-data
	x-init="$store.export.initCompanyIdsSelect(#{@export.company_ids})"
]
	= simple_fields_for @export, as: :export, wrapper: :horizontal_form do |f|
		= f.input :company_ids,
			as: :tom_select,
			collection: [],
			input_html: { multiple: true, style: 'width: 100%' },
			label_html: { class: 'hidden' },
			include_hidden: false

/ = javascript_pack_tag "#{local_assigns[:resource_name]}/company_ids"
