.nested-fields.code
  .wrapper
    div
      = f.input :id, as: :hidden, wrapper: false
      = f.input :code_space_id,
        as: :select,
        collection: current_workgroup.code_spaces.map { |c| [c.short_name, c.id] },
        label: false,
        wrapper: :nested_fields,
        include_blank: false
    div
      = f.input :value, label: false, wrapper: :nested_fields
    div
      = link_to_remove_association '', f, class: 'fa fa-trash'